<section class="section grunge-grid" id="grunge-grid-{{ section.id }}">
  <header class="section-header">
    {% if section.settings.eyebrow != blank %}
      <p class="grunge-grid__eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}
  </header>

  <div class="grunge-grid__items">
    {% for block in section.blocks %}
      <article class="grunge-grid__item" {{ block.shopify_attributes }}>
        {% if block.settings.tag != blank %}
          <p class="grunge-grid__eyebrow">{{ block.settings.tag }}</p>
        {% endif %}
        {% if block.settings.title != blank %}
          <h3 class="grunge-grid__item-title">{{ block.settings.title }}</h3>
        {% endif %}
        {% if block.settings.body != blank %}
          <p>{{ block.settings.body }}</p>
        {% endif %}
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | image_url: width: 900 }}"
            alt="{{ block.settings.title | escape }}"
            loading="lazy"
          >
        {% endif %}
      </article>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Grunge info grid",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "About / story"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Built from distortion and streetlight glow"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Drop in the lore, process, and behind-the-scenes sparks."
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "text",
          "id": "tag",
          "label": "Label",
          "default": "Origin"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "DIY born"
        },
        {
          "type": "textarea",
          "id": "body",
          "label": "Body",
          "default": "Started in a garage between broken amps and spray paint clouds."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Grunge info grid",
      "category": "Text"
    }
  ]
}
{% endschema %}
