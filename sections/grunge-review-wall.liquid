<section class="section grunge-review-wall" id="grunge-review-{{ section.id }}">
  <header class="section-header">
    {% if section.settings.eyebrow != blank %}
      <p class="grunge-grid__eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}
  </header>

  <div class="grunge-review-wall__grid">
    {% for block in section.blocks %}
      <article class="grunge-review" {{ block.shopify_attributes }}>
        {% if block.settings.rating != blank %}
          <p class="grunge-review__rating">
            <span aria-hidden="true">â˜…</span>
            <span>{{ block.settings.rating }}</span>
          </p>
        {% endif %}
        {% if block.settings.quote != blank %}
          <p class="grunge-review__quote">{{ block.settings.quote }}</p>
        {% endif %}
        {% if block.settings.author != blank %}
          <p class="grunge-review__author">{{ block.settings.author }}</p>
        {% endif %}
        {% if block.settings.image != blank %}
          <img
            src="{{ block.settings.image | image_url: width: 700 }}"
            alt="Review from {{ block.settings.author | escape }}"
            loading="lazy"
          >
        {% endif %}
      </article>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Grunge reviews",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Fans & fam"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Built to get loud, tested in the pit"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "What the crew says after stage dives, late nights, and countless washes."
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
          "id": "rating",
          "label": "Rating",
          "default": "5 / 5"
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "The fabric feels like armor and the prints look even meaner in person."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Crowd vocalist"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Grunge reviews",
      "category": "Text"
    }
  ]
}
{% endschema %}
